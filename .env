# API Configuration
# Backend API URL
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_V1_URL=http://localhost:8000/api/v1

# Authentication Configuration
REACT_APP_JWT_TOKEN_EXPIRY=30  # Token expiry in minutes
REACT_APP_REFRESH_TOKEN_ENABLED=true

# Application Settings
NODE_ENV=development
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_TRANSLATION=true
REACT_APP_ENABLE_USER_AUTH=true
REACT_APP_ENABLE_CONTENT_SEARCH=true
REACT_APP_ENABLE_QUIZZES=true
REACT_APP_ENABLE_PROGRESS_TRACKING=true

# UI/UX Configuration
REACT_APP_SITE_NAME="Physical AI & Humanoid Robotics Textbook"
REACT_APP_SITE_DESCRIPTION="Interactive textbook for learning Physical AI and Humanoid Robotics"
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,ur,es,fr,de
REACT_APP_ENABLE_MULTILANG=true

# API Rate Limiting & Performance
REACT_APP_API_TIMEOUT=30000  # 30 seconds
REACT_APP_MAX_RETRIES=3
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=3600000  # 1 hour in milliseconds

# Chat/Assistant Configuration
REACT_APP_CHAT_MAX_HISTORY=50
REACT_APP_CHAT_STREAMING_ENABLED=true
REACT_APP_CHAT_DEFAULT_MODEL=gpt-4
REACT_APP_CHAT_TEMPERATURE=0.7

# Content Configuration
REACT_APP_CONTENT_CACHE_TTL=3600000  # 1 hour
REACT_APP_MAX_UPLOAD_SIZE=10485760  # 10MB
REACT_APP_SUPPORTED_FILE_TYPES=pdf,doc,docx,txt,md

# Analytics & Monitoring
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_GA_MEASUREMENT_ID=  # Google Analytics ID
REACT_APP_SENTRY_DSN=  # Error tracking DSN

# Security Configuration
REACT_APP_SECURE_COOKIES=false
REACT_APP_CSRF_ENABLED=true

# Third-party Integrations
REACT_APP_GOOGLE_TRANSLATE_API_KEY=  # Google Translate API key
REACT_APP_OPENAI_API_KEY=  # OpenAI API key for client-side features
REACT_APP_MATOMO_URL=  # Matomo analytics URL
REACT_APP_MATOMO_SITE_ID=  # Matomo site ID

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info
REACT_APP_MOCK_API=false  # Set to true to use mock API during development

# Build Configuration
GENERATE_SOURCEMAP=false  # Set to true during development for better debugging
REACT_APP_DISABLE_SERVICE_WORKER=false